{{#if canJoinGroup}}
  {{d-button action=(action "joinGroup")
      class="group-index-join"
      icon="user-plus"
      label="groups.join"
      disabled=updatingMembership}}
{{else if canLeaveGroup}}
  {{d-button action=(action "leaveGroup")
      class="btn-danger group-index-leave"
      icon="user-times"
      label="groups.leave"
      disabled=updatingMembership}}
{{else if canVerifyCredentials}}
  {{d-button action=(action "verifyCredentials")
      class="group-verify-request"
      disabled=loading
      icon="passport"
      label="groups.vc_request"}}
{{else if canRequestMembership}}
  {{d-button action=(action "showRequestMembershipForm")
      class="group-index-request"
      disabled=loading
      icon="user-plus"
      label="groups.request"}}
{{else}}
  {{yield}}
{{/if}}